<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#fff000"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityChoice"
    android:weightSum="3"
    android:id="@+id/button_selection"
    android:baselineAligned="false">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gameshow Buzzer"
        android:id="@+id/button"
        android:layout_weight = "1"
        android:background="#800080"
        android:onClick="goToPlayerSelection"
        android:textSize="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reaction Timer"
        android:id="@+id/button2"
        android:background="#800080"
        android:layout_weight = "1"
        android:onClick="goToReactionTimer"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="45dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:background="#800080"
        android:id="@+id/button6"
        android:layout_weight = "1"
        android:onClick="goToDisplayStats"
        android:layout_alignParentBottom="true"
        android:textSize="50dp" />
</RelativeLayout>
